<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    app:cardCornerRadius="13dp"
    app:cardMaxElevation="20dp"
    android:background="@drawable/back_gr"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_pop"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:src="@drawable/lemon_ricotta_pancakes"
            android:scaleType="fitXY"/>

        <CheckBox
            android:id="@+id/checkbox_heart"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="250dp"
            android:button="@drawable/checkbox_drawable"
            android:clickable="true"
            />
    </RelativeLayout>



    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="170dp"
        android:padding="5dp">
        <TextView
            android:id="@+id/txt_name_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BlueBerry Ricotta Pancakes"
            android:textSize="18sp"
            android:textColor="#000"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txt_desc_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fluffy and BlueBerry Ricatto Pancakes"
            android:textSize="15sp"
            android:textColor="#AFAEAE"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:gravity="center_vertical">
            <RatingBar
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:saveEnabled="true"
                style="?android:attr/ratingBarStyleSmall"
                android:numStars="5"
                android:stepSize="0.1"
                android:isIndicator="true"
                android:clickable="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$13.00"
                android:textSize="18sp"
                android:textColor="#018A7D"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"/>


        </LinearLayout>
    </LinearLayout>



</androidx.cardview.widget.CardView>