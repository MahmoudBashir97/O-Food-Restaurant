<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back_gr"

    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_gr">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <RelativeLayout
                android:id="@+id/f_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp">
                <TextView
                    android:id="@+id/txt_hello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello there, "
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/txt_usename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ana"
                    android:textColor="#008175"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:layout_toRightOf="@+id/txt_hello"
                    android:layout_centerVertical="true"
                    android:elevation="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="!"
                    android:textColor="#008175"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:layout_toRightOf="@+id/txt_usename"
                    android:layout_centerVertical="true"/>

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/back_gr">
                    <ImageView
                        android:id="@+id/user_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/my_pic"
                        android:background="@drawable/back_gr"
                        />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/s_rel"
                android:layout_below="@+id/f_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:elevation="10dp"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Search products..."
                    android:background="@drawable/etd_bck"
                    android:textColorHint="#3C3B3B"
                    android:padding="10dp"
                    android:drawableEnd="@drawable/ic_search"
                    android:cursorVisible="false"
                    />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lin_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/s_rel"
                android:layout_marginTop="25dp"
                android:paddingLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select a category"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:elevation="8dp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/category_rec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/lin_1"
                android:layout_marginTop="25dp"
                android:paddingLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Popular"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:elevation="8dp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/popular_rec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/lin_2"
                android:layout_marginTop="25dp"
                android:paddingLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search by cuisine"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:elevation="8dp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/cuisine_rec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>