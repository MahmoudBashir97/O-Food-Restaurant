<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F9FAFA"
    >

    <RelativeLayout
        android:id="@+id/rrrrrr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/shopping_cart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_shopping_cart_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            />

        <ImageView
        android:id="@+id/added_check_marker"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_check_circle_black_24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="18dp"
        android:visibility="gone"
            />

        <ImageView
            android:id="@+id/settings_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_settings_black_24dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/rrrrrr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F9FAFA">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <RelativeLayout
                android:id="@+id/f_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/txt_hello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello there, "
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="19sp"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/txt_usename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ana"
                    android:textColor="#008175"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_toRightOf="@+id/txt_hello"
                    android:layout_centerVertical="true"
                    android:elevation="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="!"
                    android:textColor="#008175"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:layout_toRightOf="@+id/txt_usename"
                    android:layout_centerVertical="true"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="72dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="8dp"
                    app:cardMaxElevation="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    android:layout_centerVertical="true"
                    >
                    <ImageView
                        android:id="@+id/user_image"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:src="@drawable/ic_add_a_photo_black_24dp"
                        android:background="@drawable/back_gr"
                        android:layout_gravity="center"
                        />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/s_rel"
                android:layout_below="@+id/f_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:elevation="10dp"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Search products..."
                    android:background="@drawable/etd_bck"
                    android:textColorHint="#3C3B3B"
                    android:padding="10dp"
                    android:drawableEnd="@drawable/ic_search"
                    android:cursorVisible="false"

                    />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lin_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/s_rel"
                android:layout_marginTop="25dp"
                android:paddingLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select a category"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:elevation="8dp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/category_rec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/lin_1"
                android:layout_marginTop="25dp"
                android:paddingLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Popular"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:elevation="8dp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/popular_rec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/lin_2"
                android:layout_marginTop="25dp"
                android:paddingLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search by cuisine"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:elevation="8dp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/cuisine_rec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>