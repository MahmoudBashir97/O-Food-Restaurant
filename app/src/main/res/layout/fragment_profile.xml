<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ProfileFragment"
    android:background="#01A292">

    <View
        android:layout_width="60dp"
        android:layout_height="8dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/back_gr"
        />

    <TextView
        android:id="@+id/prf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile,"
        android:textSize="25sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/crdv_profile"
        android:layout_below="@+id/prf"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        app:cardMaxElevation="8dp"
        app:cardCornerRadius="15dp">
        <ImageView
            android:id="@+id/profile_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_add_a_photo_black_24dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_below="@+id/crdv_profile"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:cardMaxElevation="8dp"
        app:cardCornerRadius="15dp"
        android:padding="5dp"
        app:cardBackgroundColor="#02B6A4"
        >
        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:background="#02B6A4"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Anna "
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="#fff"
                android:layout_centerInParent="true"
                android:gravity="center"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>